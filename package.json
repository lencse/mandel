{
  "name": "mandel",
  "version": "1.0.0",
  "main": "app.js",
  "author": "Levente LÃ¶ki <leventeloki@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build-ci": "rm -rf ci/bin && tsc -p ./ci/src --outDir ./ci/bin",
    "clean": "rm -rf build dist dist.watch",
    "build-typescript": "tsc -p ./src --outDir ./build",
    "build-webpack": "webpack",
    "build-views": "node ci/bin/compile-views.js",
    "build-scss": "mkdir dist/css && scss styles/main.scss:dist/css/main.css",
    "build": "yarn run build-ci && yarn run clean && yarn run build-typescript && yarn run build-views && yarn run build-webpack && yarn run build-scss",
    "watch-typescript": "tsc -p ./src --outDir build --watch",
    "watch-webpack": "webpack --progress --colors --watch",
    "watch-views": "node ci/bin/compile-views.js --watch",
    "watch-scss": "scss --watch scss styles/main.scss:dist.watch/css/main.css",
    "watch": "yarn run watch-typescript & yarn run watch-views & yarn run watch-webpack & yarn run watch-scss",
    "install-webpack-config": "ln -fs ci/bin/webpack.config.js webpack.config.js",
    "postinstall": "yarn run install-webpack-config && yarn run build-ci"
  },
  "devDependencies": {
    "@types/command-line-args": "^4.0.1",
    "@types/core-js": "^0.9.42",
    "@types/handlebars": "^4.0.36",
    "@types/node": "^8.0.24",
    "command-line-args": "^4.0.7",
    "handlebars": "^4.0.10",
    "path": "^0.12.7",
    "typescript": "^2.4.2",
    "webpack": "^3.5.5",
    "webpack-livereload-plugin": "^0.11.0"
  }
}
